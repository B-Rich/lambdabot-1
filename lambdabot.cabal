    Lambdabot.Utils.FixPrecedence,
    Lambdabot.Utils.MiniHTTP,
    Lambdabot.Utils.Parser,
    Lambdabot.Utils.Pointful,
    Lambdabot.Utils.Process,
    Lambdabot.Utils.Regex,
    Lambdabot.Utils.Serial,
    Lambdabot.Utils.Url
  ghc-options:
    -funbox-strict-fields
    -fno-warn-incomplete-patterns
    -fno-warn-missing-methods
    -fno-warn-orphans
    -- Apparently needed to work around zombie & IRC connection issues
    -threaded
  buildable:
    True

